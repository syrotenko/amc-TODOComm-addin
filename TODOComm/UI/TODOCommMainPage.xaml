<Page x:Class="TODOComm.UI.TODOCommMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TODOComm.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Background="WhiteSmoke">
        <Grid.Resources>
            <DataTemplate x:Key="commentsListDataTemplate">
                <TextBlock Text="{Binding Path=CommentText}">
                </TextBlock>
            </DataTemplate>
        </Grid.Resources>

        <ListBox x:Name="commentsLB" ItemsSource="{Binding Path=TODOCommModel.Comments, Mode=TwoWay}" ItemTemplate="{Binding Source={StaticResource commentsListDataTemplate}}" 
                 ListBoxItem.MouseDoubleClick="lbi_MouseDoubleClick" Tag="{Binding ElementName=commentsLB, Path=SelectedItem}">
        </ListBox>
    </Grid>
</Page>
