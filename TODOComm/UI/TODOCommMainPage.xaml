<Page x:Class="TODOComm.UI.TODOCommMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TODOComm.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Background="WhiteSmoke">
        <Grid.Resources>
            <DataTemplate x:Key="commentsListDataTemplate">
                <TextBlock Text="{Binding Path=CommentText}">
                </TextBlock>
            </DataTemplate>
        </Grid.Resources>

        <ListBox x:Name="commentsLB" ItemsSource="{Binding Path=Comments, Mode=TwoWay}" SelectedItem="{Binding Path=SelectedComment}" ItemTemplate="{Binding Source={StaticResource commentsListDataTemplate}}">
            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}">
                    <EventSetter Event="MouseDoubleClick" Handler="lbi_MouseDoubleClick" />
                    <EventSetter Event="MouseEnter" Handler="lbi_MouseDown" />
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </Grid>
</Page>
